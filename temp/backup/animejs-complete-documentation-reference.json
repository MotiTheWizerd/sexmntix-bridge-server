  "quick_start_example": {
    "basic_animation": {
      "code": "import { animate } from 'animejs';\n\nanimate({\n  targets: '.my-element',\n  translateX: 250,\n  rotate: '1turn',\n  duration: 800,\n  ease: 'outElastic'\n});",
      "explanation": "Animates element 250px right and rotates one full turn over 800ms with elastic easing"
    },
    "timeline_example": {
      "code": "import { timeline } from 'animejs';\n\nconst tl = timeline({\n  defaults: {\n    duration: 500,\n    ease: 'outQuad'\n  }\n});\n\ntl.add({\n  targets: '.logo',\n  opacity: [0, 1]\n})\n.add({\n  targets: '.title',\n  translateY: [-20, 0]\n}, '-=250'); // Start 250ms before previous animation ends",
      "explanation": "Creates timeline with default settings, fades in logo, then slides in title with overlap"
    },
    "svg_drawing": {
      "code": "import { createDrawable, animate } from 'animejs';\n\nconst path = document.querySelector('#my-path');\nconst drawable = createDrawable(path);\n\nanimate({\n  targets: drawable,\n  draw: 1,\n  duration: 2000,\n  ease: 'linear'\n});",
      "explanation": "Creates drawable from SVG path and animates drawing from 0 to 1 over 2 seconds"
    }
  },

